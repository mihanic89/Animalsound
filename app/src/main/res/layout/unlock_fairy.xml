<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageButton
        android:id="@+id/buttonStartGame"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:padding="3dp"
        android:adjustViewBounds="true"
        android:background="@drawable/oval_shape"
        android:clickable="true"
        android:elevation="5dp"
        android:focusable="auto"
        android:gravity="center_horizontal"

        android:scaleType="centerInside"
        android:src="@drawable/baseline_lock_open_white_48"
        android:textColor="#ffffff"
        android:textSize="@dimen/textUnlockSize" />

    <TextView
        android:id="@+id/textUnlockCounterUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textUnlockCounterCenter"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/text_margin"
        android:textSize="@dimen/textUnlockSize"
        tools:text="You need to unlock"/>
    <TextView
        android:id="@+id/textUnlockCounterCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textUnlockCounterDown"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/text_margin"
        android:textSize="@dimen/textUnlockSizeDouble"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        tools:text="50"/>
    <TextView
        android:id="@+id/textUnlockCounterDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonStartGame"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/text_margin"
        android:textSize="@dimen/textUnlockSize"
        tools:text="animals"/>

    <ImageView
        android:id="@+id/unlockBackgroud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textUnlockCounterUp"

        android:adjustViewBounds="true"
        android:gravity="center_horizontal"
        android:scaleType="fitCenter"

        />
</RelativeLayout>