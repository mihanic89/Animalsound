<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <Button
        android:id="@+id/buttonName"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/imageFull"

        android:layout_centerHorizontal="true"

        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"

        android:background="@drawable/oval_shape"
        android:clickable="true"
        android:elevation="5dp"
        android:focusable="auto"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:textColor="#ffffff"
        android:textSize="25sp"
        app:autoSizeTextType="uniform"
        tools:text="Animadddddddddl"
        android:foreground="?android:attr/selectableItemBackground"/>

    <LinearLayout
        android:id="@+id/answer12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/answer34">

        <Button
            android:id="@+id/button1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/image_margin"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/oval_shape"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="auto"
            android:scaleType="fitCenter"
            android:text="1"


            android:padding="8dp"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:autoSizeTextType="uniform"
            tools:text="1"
            android:foreground="?android:attr/selectableItemBackground"
             />


        <Button
            android:id="@+id/button2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/image_margin"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/oval_shape"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="auto"
            android:scaleType="fitCenter"
            android:text="2"
            android:padding="8dp"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:autoSizeTextType="uniform"
            tools:text="2"
            android:foreground="?android:attr/selectableItemBackground"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/answer34"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/downLayout">

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/image_margin"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/oval_shape"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="auto"
            android:scaleType="fitCenter"
            android:text="3"
            android:padding="8dp"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:autoSizeTextType="uniform"
            tools:text="3"
            android:foreground="?android:attr/selectableItemBackground"/>


        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/image_margin"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/oval_shape"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="auto"
            android:scaleType="fitCenter"
            android:text="4"
            android:padding="8dp"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:autoSizeTextType="uniform"
            tools:text="4"
            android:foreground="?android:attr/selectableItemBackground"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/downLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/buttonCheck"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/image_margin"

            android:layout_weight="4"


            android:background="@drawable/oval_shape"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="auto"

            android:scaleType="fitCenter"
            app:srcCompat="@drawable/baseline_done_outline_white_48"
            android:foreground="?android:attr/selectableItemBackground"

            />


        <ImageButton
            android:id="@+id/buttonNext"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/image_margin"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:background="@drawable/oval_shape"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="auto"
            android:scaleType="fitCenter"
            app:srcCompat="@android:drawable/ic_media_next"
            android:foreground="?android:attr/selectableItemBackground"/>

    </LinearLayout>



    <ImageButton
        android:id="@+id/imageFull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/answer12"
        android:layout_below="@id/wrongCounter"
        android:layout_alignParentStart="true"

        android:scaleType="fitCenter"
        android:background="@null" />



    <Button
        android:id="@+id/wrongCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"

        android:background="@drawable/oval_shape_red"
        android:clickable="false"
        android:elevation="5dp"
        android:focusable="auto"

        android:padding="1dp"


        android:textColor="#ffffff"
        android:textSize="25sp"
        app:autoSizeTextType="uniform"
        tools:text="10" />

    <Button
        android:id="@+id/correctCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30dp"



        android:layout_marginBottom="0dp"
        android:background="@drawable/oval_shape"
        android:clickable="false"
        android:elevation="5dp"

        android:focusable="auto"
        android:padding="1dp"
        android:scaleType="fitCenter"
        android:textColor="#ffffff"
        android:textSize="25sp"
        app:autoSizeTextType="uniform"
        tools:text="10" />

</RelativeLayout>
